{% extends 'base.twig' %}

{% block content %}

    <div class="bg-warmGray-200 py-10">
      {% do action('woocommerce_before_main_content') %}

      <div class="container mx-auto">
        <div class="before-shop-loop">
          {% do action('woocommerce_before_shop_loop') %}
        </div>

        <div class="loop block md:grid grid-cols-3 justify-items-center gap-6">
          {% for post in products %}
            {% include ["partial/tease-product.twig"] %}
          {% endfor %}
        </div>

        {% do action('woocommerce_after_shop_loop') %}
        {% do action('woocommerce_after_main_content') %}
      </div>
    </div>

    <div
      id="showcase"
      class="flex fixed top-0 bottom-0 left-0 right-0 justify-center items-center backdrop-blur-md invisible opacity-0 transition-opacity delay-100 duration-200"
    >
      <div class="w-full md:w-1/2 lg:w-1/3 bg-white p-4 shadow-md">
        <div class="w-full relative">
          <img class="w-12 cursor-pointer absolute right-4 top-4 close" src="{{ site.theme.link }}/static/icons/cancel.svg" />
          <img class="w-full md:w-3/4 mx-auto showcase-img" src="" />
          {# <img class="w-3/4 mx-auto" src="http://picaduria.local/app/uploads/2021/09/pecanas.webp" /> #}
        </div>
      </div>
    </div>

{% endblock  %}