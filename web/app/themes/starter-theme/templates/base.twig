{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}
	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header w-full md:sticky top-0 bg-white z-40" >
			{% block header %}
				<div class="wrapper block md:flex justify-between items-center">
					<div class="flex justify-between w-full md:w-28">
            <a class="hdr-logo-link" href="{{site.url}}" rel="home"><img class="custom-logo w-14 md:w-28" src="{{ site.theme.link }}/static/img/logo.svg" /></a>
					  <div class="md:hidden">
              <img class="w-10 p-2 cursor-pointer hidden hamburger" src="{{ site.theme.link }}/static/icons/cancel.svg" />
              <img class="w-10 p-2 cursor-pointer hamburger" src="{{ site.theme.link }}/static/icons/menu.svg" />
            </div>
          </div>
					{# <h1 class="hdr-logo" role="banner">
						<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
					</h1> #}
					<nav
            id="nav-main"
            class="nav-main absolute md:static w-full font-phosphate-inline text-brown text-2xl bg-white z-40 transform -translate-x-full md:transform-none transition-transform"
            role="navigation"
          >
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{# {% if title %}<h1>{{title}}</h1>{% endif %} #}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
