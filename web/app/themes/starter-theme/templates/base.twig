{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}
	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header w-full md:sticky top-0 bg-white z-40" >
			{% block header %}
				<div class="wrapper block md:flex justify-between items-center container mx-auto md:h-24">
					<nav
            id="nav-main"
            class="nav-main absolute md:static w-full font-phosphate-inline text-brown text-2xl bg-white z-10 transform -translate-x-full md:transform-none transition-transform"
            role="navigation"
          >
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
          <div class="flex justify-between w-full md:w-52 h-14 md:h-auto">
					  <div class="md:hidden">
              <img class="w-10 p-2 cursor-pointer hidden hamburger" src="{{ site.theme.link }}/static/icons/cancel.svg" />
              <img class="w-10 p-2 cursor-pointer hamburger" src="{{ site.theme.link }}/static/icons/menu.svg" />
            </div>
            <a class="hdr-logo-link z-20 md:z-auto" href="{% if is_front_page %}#home{% else %}{{site.url}}{% endif %}" rel="home"><img class="custom-logo w-28 md:mt-10 md:w-full" src="{{ site.theme.link }}/static/img/logo_fondo_blanco.svg" /></a>
          </div>
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{# {% if title %}<h1>{{title}}</h1>{% endif %} #}
			<div class="wrapper {{sidebar_class}} overflow-x-hidden">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer" class="bg-warmGray-200 py-6">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
